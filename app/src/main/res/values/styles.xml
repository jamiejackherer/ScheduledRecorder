<resources>
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionMenuTextColor">@color/white</item>

        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- remove action bar, using toolbar -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- rendering problems in the layout preview editor -->
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="ToolbarWhiteArrow" parent="AppTheme.Base">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <!-- main Activity's TabLayout style -->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- clickable TextView to set some data -->
    <style name="clickable_textview">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
